@require 'colors'

@import url('https://fonts.googleapis.com/css?family=Lato:300,400,700');

*
    box-sizing border-box

html, body, #root
    min-height 100%
    height 100%

body
    margin 0
    -webkit-tap-highlight-color transparent

body, button, input, textarea
    font-family Lato

a
    text-decoration none

a, button
    &:active, &:focus
        outline none

input, textarea
    &:focus, &:active
        outline none

ul, ol
    margin 0
    padding 0