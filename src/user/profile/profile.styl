@require '~styles/mixins'

.container
    min-height 100%
    display flex
    justify-content center
    margin-bottom 80px

.content
    max-width 800px
    width 90%
    display flex
    flex-direction column

    +media-up(md)
        margin-top 60px
        flex-direction row

.title
    margin 48px 0
    &:first-child
        margin-top 0

.avatar
    display flex
    flex-shrink 0
    width 200px
    height 200px
    img
        max-width 100%
        max-height 100%

.user-data
    margin-top 40px
    width 100%

    +media-up(md)
        margin-left 80px

.form
    width 100%