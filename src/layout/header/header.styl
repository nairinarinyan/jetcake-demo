@require '~styles/colors'
@require '~styles/mixins'

.header
    position fixed
    top 0
    width 100%
    height 60px
    padding 10px
    display flex
    justify-content space-between
    align-items center
    background white
    z-index 10

    +media-up(md)
        padding 30px 60px
        height 100px

.logo
    height 100%
    max-width 30%
    display flex
    justify-content center
    align-items center
    img
        max-height 100%
        max-width 100%

.auth-buttons
    display flex