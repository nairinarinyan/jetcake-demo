@require '~styles/colors'

.info-card
    position relative
    width 300px
    height 300px
    border-radius 18px
    box-shadow 0px 0px 30px 0px alpha(deep-blue, 20%)
    transition .2s ease-out
    cursor pointer
    font-size 1.7rem
    display flex
    justify-content center
    align-items center
    color deep-blue
    font-weight 700
    overflow hidden

    span
        position relative
        z-index 2

    &:hover
        transform scale(1.08)
        color white

        .overlay
            transform translateY(0)
    
.overlay
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    transform translateY(100%)
    background deep-blue
    transition .2s ease-out
    z-index 1