@require '~styles/colors'
@require '~styles/mixins'

.steps
    display flex
    justify-content center

.step-circle
    position relative
    margin 0 20px
    width 40px
    height 40px
    border-radius 50%
    background white
    color deep-blue
    font-weight 600
    display flex
    justify-content center
    align-items center
    font-size 1.1rem
    border 2px solid deep-blue
    cursor not-allowed

    +media-up(md)
        margin 0 48px

    &:not(:last-child):after
        content ' '
        position absolute
        right -35px
        width 25px
        height 1px
        background deep-blue

        +media-up(md)
            right -80px
            width 60px

    &.active
        background deep-blue
        color white

    &.completed
        background green
        color white
        border 2px solid green