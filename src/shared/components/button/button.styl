@require '~styles/colors'

.button
    font-size 1rem
    font-weight 700
    padding 8px
    border-radius 5px
    cursor pointer
    border 2px solid
    color deep-blue
    background white
    min-width 130px
    height 40px

    &.primary
        color white
        border-color deep-blue
        background deep-blue

    &.secondary
        border-color deep-blue

    &.link
        border-color white

.fluid
    width 100%