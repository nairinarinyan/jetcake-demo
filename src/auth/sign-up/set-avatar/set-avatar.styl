@require '~styles/colors'

.container
    display flex
    flex-direction column
    align-items center
    margin-top 80px

.title
    margin 0 0 80px

.file-rect
    width 250px
    height 250px
    margin-bottom 60px

.drag-zone
    width 100%
    height 100%
    background-color light-blue
    border 5px dashed deep-blue
    text-align center
    display flex
    justify-content center
    align-items center

    label
        font-size 1.1em
        width 100%
        height 100%
        display flex
        justify-content center
        align-items center

        span
            padding 20px

#input-file
    visibility hidden
    position absolute
    width 1px
    height 1px

.preview
    display flex
    justify-content center
    align-items center
    width 100%
    height 100%
    img
        max-width 100%
        max-height 100%