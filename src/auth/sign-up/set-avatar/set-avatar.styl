@require '~styles/colors'

.container
    display flex
    flex-direction column
    align-items center
    margin-top 80px

.title
    margin 0 0 80px

.drag-zone
    width 250px
    height 250px
    background-color light-blue
    border 5px dashed deep-blue
    text-align center
    display flex
    justify-content center
    align-items center
    margin-bottom 60px

    label
        font-size 1.1em
        width 100%
        height 100%
        display flex
        justify-content center
        align-items center

        span
            padding 20px


#input-tile
    visibility hidden
    position absolute
    width 1px
    height 1px